# .env.example
# Copy this file to .env and fill in your actual values

# REQUIRED: Telegram Bot Token
# Get this from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# REQUIRED: OpenAI API Key  
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# OPTIONAL: Enhanced functionality API Keys
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here
SCRAPING_API_KEY=your_scraping_service_key_here
ARCHIVE_API_KEY=your_archive_service_key_here

# Database Configuration (Railway will auto-configure these)
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=auto_generated_by_railway
DB_HOST=auto_configured_by_railway
DB_PORT=5432

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Rendering & Vision Settings (optional)
RENDERER_URL=
RENDERER_API_KEY=
RENDERER_TIMEOUT=25
RENDERER_MIN_WORDS=40
ENABLE_RENDERER=true
ENABLE_SCREENSHOT_OCR=true
VISION_MODEL=gpt-4o-mini-vision
